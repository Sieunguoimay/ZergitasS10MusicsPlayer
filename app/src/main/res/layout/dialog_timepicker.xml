<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView_timePickerTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:text="Amount of time"
                            android:textAlignment="center"
                            android:fontFamily="monospace"
                            android:textSize="20sp" />

                        <TimePicker

                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/textView_timePickerTitle"
                            android:id="@+id/timePicker"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:timePickerMode="spinner"
                            android:theme="@style/my_time_picker"
                            style="@style/my_time_picker"
                            >

                        </TimePicker>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/timePicker"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"
                            >

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardView_Cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"

                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                                <TextView
                                    android:layout_marginHorizontal="15dp"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="monospace"

                                    android:text="Cancel"
                                    android:textAlignment="center"
                                    android:textSize="20sp" />
                        </android.support.v7.widget.CardView>
                                <android.support.v7.widget.CardView
                                    android:id="@+id/cardView_Ok"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="0dp">

                                        <TextView
                                            android:layout_marginHorizontal="15dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:fontFamily="monospace"

                                            android:text="Ok"
                                            android:textAlignment="center"
                                            android:textSize="20sp" />
                                </android.support.v7.widget.CardView>
                        </LinearLayout>
                </RelativeLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>