<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_224sdp"
            android:src="@drawable/bg_menu"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/ll_drawer_poster"
    >
        <ImageView android:layout_width="@dimen/_100sdp"
                   android:layout_height="@dimen/_100sdp"
                   android:src="@drawable/icon_launcher"
                   android:id="@+id/iv_drawer_logo"
                   android:layout_marginTop="@dimen/_30sdp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S10 MUSIC PLAYER"
                android:textSize="@dimen/text_size_1"
                android:textColor="@color/colorBackgroundLight"
                android:fontFamily="@font/blacklisted"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/tv_drawer_app_name"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Musics is an outburst of the soul"
                android:textSize="@dimen/text_size_3"
                android:textColor="@color/colorBackgroundLight"
                android:fontFamily="@font/utm_swiss_condensed_0"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_below="@+id/ll_drawer_poster"
            android:layout_marginTop="@dimen/_25sdp"
    >


        <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv_sleep_timer"


                app:cardElevation="@dimen/_0sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/_25sdp"
                app:cardBackgroundColor="#00ffffff"
                android:layout_gravity="end|bottom"

                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
        >



                <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:src="@drawable/ic_sleep_time"
                        android:layout_margin="@dimen/_10sdp"
                />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep timer"
                    android:textColor="@color/textColorDark"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_50sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:id="@+id/tv_sleep_timer"
            />
        </android.support.v7.widget.CardView>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/ll_dark_mode"

                android:layout_margin="@dimen/_10sdp"
        >

            <!--android:layout_marginRight="@dimen/_20sdp"-->
            <!--android:layout_marginLeft="@dimen/_20sdp"-->


            <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_dark_mode"
                    android:layout_margin="@dimen/_10sdp"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dark mode"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textColor="@color/textColorDark"
                    android:textStyle="bold"
                    android:id="@+id/tv_dark_mode"
            />
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tb_dark_mode"
                    android:layout_margin="@dimen/_5sdp"
                    android:theme="@style/SCBSwitch"
            />

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
