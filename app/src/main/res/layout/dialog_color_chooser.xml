<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/color_chooser1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            android:layout_margin="5dp"

            >
            <android.support.v7.widget.CardView
                android:layout_gravity="center"

                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22dp"

                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true" android:id="@+id/color1"
                android:focusable="true"
                app:cardBackgroundColor="@color/colorPallete1"
                >
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            android:layout_margin="5dp"

            >
            <android.support.v7.widget.CardView
                android:layout_gravity="center"

                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22dp"
                android:foreground="?android:attr/selectableItemBackground"

                android:clickable="true" android:id="@+id/color2"
                android:focusable="true"
                app:cardBackgroundColor="@color/colorPallete2"
                >
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            android:layout_margin="5dp"

            >
            <android.support.v7.widget.CardView
                android:layout_gravity="center"

                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22dp"

                android:clickable="true" android:id="@+id/color3"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPallete3"
                >
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22dp"

            app:cardElevation="0dp"
            android:layout_margin="5dp"

            >
            <android.support.v7.widget.CardView
                android:layout_gravity="center"

                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22dp"

                android:clickable="true"
                android:id="@+id/color4"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPallete4"
                >
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22dp"

            app:cardElevation="0dp"
            android:layout_margin="5dp"
            >
            <android.support.v7.widget.CardView
                android:layout_gravity="center"

                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22dp"
                android:clickable="true"
                android:id="@+id/color5"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPallete5"
                >
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/color_chooser2"

        android:layout_below="@+id/color_chooser1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22dp"

            app:cardElevation="0dp"
            android:layout_margin="5dp"

            >
            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22dp"
                android:clickable="true"
                android:id="@+id/color6"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPallete6"
                >
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22dp"

            app:cardElevation="0dp"
            android:layout_margin="5dp"

            >
            <android.support.v7.widget.CardView
                android:layout_gravity="center"

                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22dp"
                android:clickable="true"
                android:id="@+id/color7"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPallete7"
                >
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22dp"

            app:cardElevation="0dp"
            android:layout_margin="5dp"

            >
            <android.support.v7.widget.CardView
                android:layout_gravity="center"

                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22dp"
                android:clickable="true"
                android:id="@+id/color8"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPallete8"
                >
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22dp"

            app:cardElevation="0dp"
            android:layout_margin="5dp"

            >
            <android.support.v7.widget.CardView
                android:layout_gravity="center"

                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22dp"
                android:clickable="true"
                android:id="@+id/color9"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPallete9"
                >
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            android:layout_margin="5dp"
            >
            <android.support.v7.widget.CardView
                android:layout_gravity="center"

                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22dp"
                android:clickable="true"
                android:id="@+id/color10"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPallete10"
                >
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/color_chooser2"
        android:id="@+id/cardView_CancelButton_color"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="0dp"
        android:layout_alignParentEnd="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_gravity="center"
            />


    </android.support.v7.widget.CardView>
</RelativeLayout>

</android.support.constraint.ConstraintLayout>