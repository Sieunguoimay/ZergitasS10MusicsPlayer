<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/_140sdp"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/colorPureWhite"
>

    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_2_play_all"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
    >
        <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_play_all"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Play All"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/colorPrimaryDark"
                  android:layout_marginStart="@dimen/_40sdp"

        />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_2_add_to_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
    >
        <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_next_play"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Play Next"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/colorPrimaryDark"
                  android:layout_marginStart="@dimen/_40sdp"

        />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_2_push_to_queue"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
    >
        <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:src="@drawable/ic_add_queue"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Add to queue"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/colorPrimaryDark"
                  android:layout_marginStart="@dimen/_40sdp"

        />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_2_rename"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
    >
        <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:src="@drawable/ic_edit"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Rename"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/colorPrimaryDark"
                  android:layout_marginStart="@dimen/_40sdp"

        />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_2_delete"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
    >
        <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:src="@drawable/ic_delete"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Delete"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/colorPrimaryDark"
                  android:layout_marginStart="@dimen/_40sdp"

        />

    </android.support.v7.widget.CardView>
</LinearLayout>
