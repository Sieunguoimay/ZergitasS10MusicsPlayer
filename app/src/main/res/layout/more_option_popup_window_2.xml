<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/colorWhite"
              android:orientation="vertical"
>
    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_2_play_all"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Play All"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="@dimen/_5sdp"
        />

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_2_add_to_next"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Play Next"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="@dimen/_5sdp"
        />

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_2_push_to_queue"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Add to queue"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="@dimen/_5sdp"
        />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:id="@+id/cv_more_option_2_delete"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorAbsoluteTransparency"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Delete"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="@dimen/_5sdp"
        />
    </android.support.v7.widget.CardView>
</LinearLayout>
